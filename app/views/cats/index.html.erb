<h1>抽獎名單</h1>
<ul>
<% @cats.each do |list| %>
  <li>
    <%= list.name %>
    <%= link_to '顯示', cat_path(list) %>
    <%= link_to '編輯', edit_cat_path(list) %>
    <%= button_to '刪除', cat_path(list), method: :delete %>
  </li>
<% end %>
</ul>
<p>
  <%= link_to '加新貓貓', new_cat_path %>
</p>

<%= form_tag url_for(controller: 'cats', action: 'lottery'), :method => "get" do %>
  <p>想抽
  <%= text_field_tag 'quantity' %>
  隻貓</p>
  <%= submit_tag '抽！' %>
<% end %>

